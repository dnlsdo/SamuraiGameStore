<%- include('./includes/head') %>
<%- include('./includes/menu') %>
<%- include('./includes/nav') %>


    <!-- Nav menu funcinario, cliente e produtos-->
    <form class="my-5">
        <nav>
            <ul class="nav justify-content-center">
                <li class="nav-item"><a class="nav-link" href="/cadastro/cliente" style="color:white">Cliente</a></li>
                <li class="nav-item"><a class="nav-link" href="/cadastro/produto" style="color:white">Produtos</a></li>
                <li class="nav-item"><a class="nav-link" href="/cadastro/funcionario" style="color:white">Funcionarios</a></li>
            </ul>
        </nav>
        <%- include('./includes/message') %>
          <!-- Input Fotografia, nome e descrição-->
        <div class="container mt-4">
            <div class="row align-items-start">
           
                <div class="col-6">
                    <div class="mb-3">
                        <!--
                        <label for="input-img" class="form-label">Escolha Imagem do Tipo de Produto</label>
                        <input class="input-img" form-control-sm" id="formFileSm" type="file">
                        -->
                        <div class="mt-3">
                            <label class="form-label">Nome do jogo:</label>
                            <input type ="text" class="form-control "name="nome do jogo" placeholder="Digite o nome" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Plataforma:</label>
                            <input class="form-control" name="Plataforma" type="text" placeholder="Ex: PS4, Nintendo, etc..." aria-label="#" required>
                        </div>
                    </div>
                  </div>

                  <div class="col-6">
                    <div class="row justify-content-end" >
                        <div class= "col-12" >
                            <label for="textarea-form" class="form-label">Descrição:</label>
                            <textarea class="form-control" placeholder="Descrição do produto" rows="5" id="textarea-form"></textarea>
                        </div>
                    </div>
                </div>             
              
            </div>
        </div>


    <!-- Input Tipo, plataformna, quantidade e preço-->
    <div class="row"> 
        <div class="col-md-6 offset-md-3">
            <div class="form-group">
                <label class="form-label">Tipo:</label>
                <input  type ="text" class="form-control "name="tipo" placeholder="Digite o tipo" required>
            </div>
        </div>
        <div class="col-md-6 offset-md-3 mt-3">
            
        </div>
        <div class="col-md-6 offset-md-3 mt-4">
            <label for="qtd-input" class="form-label">Quantidade:</label>
            <input type="number" id="qtd-input" name="qtd" class="form-control" required>
        </div>

        <div class="col-md-6 offset-md-3 mt-4">
        <div class="input-group mb-3" >
            <span class="input-group-text">R$</span>
            <input type="text" class="form-control"  placeholder="150.99" aria-label="Valor em Reais" required>
          </div>
        </div>
    </div>

    <!-- Botão salvar -->
        
    <div class="row justify-content-center my-3">
        <div class="col-8">
            <button class="btn d-block btn-dark mx-auto mb-3" type="submit">Salvar</button>
    </div>
        
    
    </form>

