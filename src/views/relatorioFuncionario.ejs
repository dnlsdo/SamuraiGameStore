<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/cadas.css">
  <link rel="stylesheet" href="/plugins/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/plugins/fontawesome/css/all.min.css">
  
  <title>Samurai Games Store</title>
</head>
<body>
<%- include('./includes/menu') %>
<%- include('./includes/nav') %>

<main id="contato">
    <section class="container">
      <!-- MENU -->

        <nav>
            <ul class="nav justify-content-center">
                <li class="nav-item"><a class="nav-link" href="/relatorio/cliente" style="color:white">Cliente</a></li>
                <li class="nav-item"><a class="nav-link" href="/relatorio/venda" style="color:white">Vendas</a></li>
                <li class="nav-item"><a class="nav-link" href="/relatorio/funcionario" style="color:white">Funcion√°rios</a>
            </li>
            </ul>
        </nav>
        <%- include('./includes/message') %>
        <form id="form-funcionario" class="my-3" method="GET">

            <label for="orderby">Classificar Por: </label>

            <select name="orderby" class="orderby" aria-label="Pedido da loja">
            <option value="name" selected="selected">Ordenar por nome A-Z </option>
            <option value="date">Ordenar por venda mais recente</option>
            <option value="price">Ordenar por venda: menor para maior</option>
            <option value="price-desc">Ordenar por venda: maior para menor</option>
            </select>
            <button class="btn btn-secondary" type="submit"><span style="font-size: 15px;"><i class="fas fa-arrow-alt-circle-right"></i></span></button>
        </form>
            <!-- DIV  Nome, E-mail, Nascimento, CPF e Total -->
            <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Cargo</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Total de Vendas</th>
                </tr>
                </thead>
                <tbody class="table-relatorio">
                    <% funcionarios.forEach(funcionario => { 
                        const link = `/editar/funcionario/${funcionario.id_usuario}`%>
                    <tr>
                        <td> <%- funcionario.id_usuario %> </td>
                        <td> <%- funcionario.nome %> </td>
                        <td> <%- funcionario.cargo %> </td>
                        <td> <%- funcionario.email %> </td>
                        <td> <% if(funcionario.totalVenda){ %>
                            <%- funcionario.totalVenda.toFixed(2) %>
                        <% } %> </td>
                        <td>
                        <a class="btn btn-link" href="<%- link %>">
                        <button type="button" class="btn btn-secondary btn-sm">Editar</button>
                        </a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            </div>
            <div style="width: 100%; ">
          <p class="text-end" ><a href="/relatorio/xml/funcionario"> Gerar XML</a></p>
        </div>
        </section>
    </main>
    <script src="/js/relatorios.js"></script>
<%- include('./includes/footer') %>