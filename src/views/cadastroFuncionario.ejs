<body>
<%- include('./includes/menu') %>
<%- include('./includes/nav') %>
    <main id="contato">
        <section class="container">
        <!-- MENU -->
            <nav >
                <div id="color">
                    <ul class="nav justify-content-center">
                            <li class="nav-item"><a class="nav-link" href="/cadastro/cliente" style="color:white">Cliente</a></li>
                            <li class="nav-item"><a class="nav-link" href="/cadastro/produto" style="color:white">Produtos</a></li>
                        <li class="nav-item"><a class="nav-link"  href="/cadastro/funcionario" style="color:white">Funcionarios</a></li>
                    </ul>
                </div>
            </nav>

            <%- include('./includes/message') %>

            <form class="my-5" action="/cadastro/funcionario" method="POST">
          <!-- DIV  nome e e-mail -->
                <div class="row justify-content-center">
                      <div class="col-8 col-sm-4 mb-2">
                          <div class="mb-2 form-group">
                              <label for="nome-form" class="form-label">Nome:</label>
                              <input type="text" class="form-control" name="nome" placeholder="Nome" id="nome-form" required>
                          </div>
                          <div class="form-group">
                              <label for="email-form" class="form-label">E-mail:</label>
                              <input type="email" class="form-control" name="email" placeholder="user@provedor.com" id="email-form" required>
                          </div>
                      </div>
                <!-- DIV Cargo e senha-->                         
					<div class="col-8 col-sm-4 mb-2">
						<div class="mb-2 form-group">
							<label  class="form-label">Cargo:</label>
							<input class="form-control" name="cargo" placeholder="Digite o cargo" required>
						</div>
                        <div class="form-group">
                        <label for="inputPassword" class="form-label">Senha:</label>
                          <input type="password" class="form-control" id="inputPassword" required>
                        </div>
                      </div>
				</div>
                    <!--BotÃ£o  -->
                <div class="row justify-content-center my-3">
                    <div class="col-8">
                    <button class="btn d-block btn-dark mx-auto mb-3" type="submit">Salvar</button>
                </div>


            </form>

            </div>
            </form>
