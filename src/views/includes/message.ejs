<% if(erros.length > 0){ %>
    <div class="row">
        <div class="col my-2">
            <div class="alert alert-danger"> 
                <% erros.forEach(erro => { %>
                    <%= erro %> </br>
               <% });%>
            </div>
        </div>
    </div>
    <% } %>
        
    <% if(success.length > 0){ %>
        <div class="row">
            <div class="col my-3">
                <div class="alert alert-success"> 
                    <% success.forEach(success => { %>
                        <%= success %> </br>
                   <% });%>
                </div>
            </div>
        </div>
    <% } %>