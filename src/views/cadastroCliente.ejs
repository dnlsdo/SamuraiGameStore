<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/cadas.css">
  <link rel="stylesheet" href="/plugins/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/plugins/fontawesome/css/all.min.css">
  
  <title>Samurai Games Store</title>
</head>
<body>
<%- include('./includes/menu') %>
<%- include('./includes/nav') %>

<main id="contato">
	<section class="container">
      <!-- MENU -->
        <nav>
            <ul class="nav justify-content-center">		
				<li class="nav-item"><a class="nav-link" href="/cadastro/cliente" style="color:white">Cliente</a></li>
				<li class="nav-item"><a class="nav-link" href="/cadastro/produto" style="color:white">Produtos</a></li>
				<li class="nav-item"><a class="nav-link" href="/cadastro/funcionario" style="color:white">Funcionarios</a></li>
            </ul>
        </nav>
      <%- include('./includes/message') %>

		<!-- FORM de Cadastro-->
		<form class="my-5" action="/cadastro/cliente" method="POST" >
        <!-- DIV  nome e e-mail -->
			<div class="row justify-content-center">
				<div class="col-8 col-sm-4 mb-2">
					<div class="form-group">
						<label for="nome-form" class="form-label">Nome:</label>
						<input type="text" class="form-control" name="nome" placeholder="Nome" id="nome-form" required>
					</div>
				</div>
                <div class="col-8 col-sm-4 mb-2">
			        <div class="form-group">
			        	<label for="email-form" class="form-label">E-mail:</label>
				    	<input type="email" class="form-control" name="email" placeholder="username@provedor.com" id="email-form">
		        	</div>
			    </div>
			</div>
        <!-- Div nascimento e CPF-->
			<div class="row justify-content-center">
				<div class="col-8 col-sm-4 mb-2">
					<div class="form-group">
						<label for="input-nasc" class="form-label">Nascimento:</label>
						<input type="date" class="form-control" name="nascimento" id="input-nasc" placeholder="dd/mm/aaa">
					</div>
				</div>
                <div class="col-8 col-sm-4 mb-2">
					<div class="form-group">
						<label for="input-cpf"  class="form-label">CPF:</label>
						<input  class="form-control" name="cpf" id="input-cpf"placeholder="CPF (Sem Pontuação)"required>
					</div>
				</div>
			</div>
        <!-- Botão -->
			<div class="row justify-content-center my-3">
				<div class="col-8">
					<button class="btn d-block btn-dark mx-auto mb-3" type="submit">Salvar</button>
				</div>
			</div>
		</form>

	</section>
</main>

<%- include('./includes/footer') %>